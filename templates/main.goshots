<!DOCTYPE HTML>
<html>
<head>
<title>{{.Provider.Title}}</title>

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" href="{{.StaticRoot}}favicon.ico">
  <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.16.1/css/semantic.min.css">

  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.16.1/javascript/semantic.min.js"></script>

  <style>

    html, body {
      font-size: 15px;
      height: 100%;
      width: 100%;
    }

    body {
      font-family: "Open Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
      text-rendering: optimizeLegibility;
      color: #555555;
      background-color: black;
      margin: 0px;
      padding: 0px;
    }

    a {
      text-decoration: none;
    }

    #page {
      height: 100%;
      width: 100%;
      display: table;
    }

    #top-row, #bottom-row {
      display: table-row;
    }

    #top-cell, #bottom-cell {
      display: table-cell;
    }

    #top-cell {
      padding-left: 0.5em;
      padding-right: 0.5em;
      padding-top: 0.5em;
      cursor: pointer;
    }

    #bottom-cell {
      height: 2em;
      text-align: center;
    }

    #overlay-container {
      width: 100%;
      font-size: 1.5em;
      position: absolute;
      bottom: 3em;
    }

    #overlay-content {
      width: 24em;
      max-width: 60%;
      margin-left: auto;
      margin-right: auto;
      color: black;
      background-color: rgba(255,255,255,0.7);
      border: 0.2em solid #555555;
      border-radius: 1em;
      -moz-border-radius: 1em;
      text-align: center;
      font-weight: bold;
      padding: 0.25em;
    }

    .ui.text.menu > .item {
      margin: 0 0.5em;
    }

    i.icon {
      margin: 0;
    }

    /* typically within mobile landscape mode */
    @media (max-width: 800px) {
      .keyboard.prompt {
        display: none;
      }
      html, body {
        font-size: 12.5px;
      }
    }

    /* typically within mobile portrait mode */
    @media (max-width: 500px) {
      html, body {
        font-size: 11px;
      }
    }

  </style>

  <script>
    var showingSolution = false;
    function contentClicked() {
      if (showingSolution) {
        location.reload();
      } else {
        $('#overlay-txt').html('{{.Solution}}');
        showingSolution = true;
      }
    }

    $(document).keypress(function(e) {
      var key = String.fromCharCode(e.which);
      if ((e.which == 13) || (key == ' ')) {
        contentClicked();
      }
    });
  </script>

</head>

<body>

<div id="page">
  <div id="top-row">
    <div id="top-cell" onclick="contentClicked();">
      {{.Content}}
    </div>
  </div>
  <div id="bottom-row">
    <div id="bottom-cell">
      
      <div class="ui centered compact inverted text menu">
        <a class="item" href="filters">
          <i class="filter icon"></i> Filters
        </a>
        <a class="item" href="about">
          <i class="info letter icon"></i> About
        </a>
        <a class="item" href="donate">
          <i class="dollar icon"></i> Donate
        </a>
      </div>

    </div>
  </div>
</div>

<div id="overlay-container">
  <a href="#" onclick="contentClicked();">
    <div id="overlay-content">
      <span id="overlay-txt">{{.Provider.Prompt}}<span class="keyboard prompt"> Click or hit enter!</span></span>
    </div>
  </a>
</div>

</body>

</html>
